<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="cn.isqing.icloud.starter.admin.dao.mapper.UserMfaMapper">

    <resultMap id="BaseResultMap" type="cn.isqing.icloud.starter.admin.dao.entity.UserMfa">
        <id column="id" property="id"/>
        <result column="user_id" property="userId"/>
        <result column="secret_key" property="secretKey"/>
        <result column="is_enabled" property="isEnabled"/>
        <result column="create_time" property="createTime"/>
        <result column="update_time" property="updateTime"/>
    </resultMap>

    <sql id="Base_Column_List">
        id, user_id, secret_key, is_enabled, create_time, update_time
    </sql>

    <insert id="insert" parameterType="cn.isqing.icloud.starter.admin.dao.entity.UserMfa">
        INSERT INTO admin_user_mfa (
            id, user_id, secret_key, is_enabled, create_time, update_time
        ) VALUES (
            #{id}, #{userId}, #{secretKey}, #{isEnabled}, #{createTime}, #{updateTime}
        )
    </insert>

    <update id="update" parameterType="cn.isqing.icloud.starter.admin.dao.entity.UserMfa">
        UPDATE admin_user_mfa
        <set>
            <if test="userId != null and userId != 0">
                user_id = #{userId},
            </if>
            <if test="secretKey != null and secretKey != ''">
                secret_key = #{secretKey},
            </if>
            <if test="isEnabled != null">
                is_enabled = #{isEnabled},
            </if>
            <if test="createTime != null">
                create_time = #{createTime},
            </if>
            <if test="updateTime != null">
                update_time = #{updateTime},
            </if>
        </set>
        WHERE id = #{id}
    </update>

    <delete id="deleteByUserId">
        DELETE FROM admin_user_mfa WHERE user_id = #{userId}
    </delete>

    <select id="selectByUserId" resultMap="BaseResultMap">
        SELECT <include refid="Base_Column_List"/>
        FROM admin_user_mfa
        WHERE user_id = #{userId}
    </select>

</mapper>